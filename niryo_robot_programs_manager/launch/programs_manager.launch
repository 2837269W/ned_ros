<?xml version="1.0" ?>
<launch xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://gist.githubusercontent.com/nalt/dfa2abc9d2e3ae4feb82ca5608090387/raw/roslaunch.xsd">
    <!-- Arguments -->
    <arg name="log_level" default="INFO" />
    <arg name="standalone" default="false"/>
    <arg name="hardware_version" default="ned"/>

    <arg name="saved_files_dir" value="~/.niryo/simulation" if="$(eval hardware_version =='fake')"/>
    <arg name="saved_files_dir" value="~/niryo_robot_saved_files" unless="$(eval hardware_version =='fake')"/>

    <arg name="programs_dir" value="$(arg saved_files_dir)/niryo_robot_programs" />

    <node name="niryo_robot_programs_manager" pkg="niryo_robot_programs_manager" type="programs_manager_node.py"
          output="screen">
        <param name="log_level" type="string" value="$(arg log_level)" />

        <param name="standalone" type="bool" value="$(arg standalone)"/>
        <param name="programs_dir" type="string" value="$(arg programs_dir)"/>

        <rosparam file="$(find niryo_robot_programs_manager)/config/programs_manager_params.yaml" command="load"/>
    </node>
    
</launch>
