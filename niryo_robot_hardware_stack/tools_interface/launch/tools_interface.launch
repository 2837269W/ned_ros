<?xml version="1.0" ?>
<launch xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://gist.githubusercontent.com/nalt/dfa2abc9d2e3ae4feb82ca5608090387/raw/roslaunch.xsd">
    <arg name="hardware_version" default="ned"/>

    <!-- launch the ttl_driver_node node using ttl_driver_node executable from ttl_driver package -->
    <include file="$(find ttl_driver)/launch/ttl_driver_base.launch.xml" >
        <arg name="hardware_version" value="$(arg hardware_version)" />
    </include>
    
    <node pkg="tools_interface" type="tools_interface_node" name="tools_interface" output="screen">  
        <rosparam file="$(find tools_interface)/config/default.yaml" command="load"/>
        <rosparam file="$(find tools_interface)/config/$(arg hardware_version)/tools_config.yaml" command="load"/>
    </node>

</launch>
