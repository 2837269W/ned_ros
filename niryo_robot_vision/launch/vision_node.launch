<?xml version="1.0" ?>
<launch xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://gist.githubusercontent.com/nalt/dfa2abc9d2e3ae4feb82ca5608090387/raw/roslaunch.xsd">
    <!-- Arguments -->
    <arg name="log_level" default="INFO" />
    <arg name="hardware_version" default="ned" />

    <include file="$(find niryo_robot_vision)/launch/vision_node_base.launch.xml"> 
        <arg name="hardware_version" value="$(arg hardware_version)" />
    </include>

    <node name="niryo_robot_vision" pkg="niryo_robot_vision" type="camera_publisher_and_services.py" output="screen">
        <param name="log_level" type="string" value="$(arg log_level)" />
        <param name="hardware_version" value="$(arg hardware_version)" />
        <param name="simulation_mode" value="True" if="$(eval hardware_version == 'fake_ned' or hardware_version == 'fake_ned2')" />
        <param name="simulation_mode" value="False" unless="$(eval hardware_version == 'fake_ned' or hardware_version == 'fake_ned2')" />
    </node>
</launch>
